{
  "name": "@gridy/players",
  "description": "Board games engines library",
  "version": "0.1.2",
  "author": "Jan Forst <ensonador@gmail.com>",
  "dependencies": {
    "@gridy/core": "^0.4.6",
    "@gridy/games": "^0.1.2"
  },
  "devDependencies": {
    "@gridy/build": "^1.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "concurrently": "^4.1.0",
    "del-cli": "^2.0.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT",
  "main": "dist/gridy-players.umd.js",
  "meta": {
    "namespace": "GridyPlayers",
    "external": [
      "@gridy/core",
      "@gridy/games"
    ]
  },
  "module": "dist/gridy-players.es5.js",
  "scripts": {
    "build": "tsc --module commonjs && node node_modules/@gridy/build/node_modules/rollup/bin/rollup -c node_modules/@gridy/build/rollup.config.js && node node_modules/@gridy/build/node_modules/typedoc/bin/typedoc --out docs --target es6 --theme minimal --mode file src",
    "prebuild": "del-cli docs dist",
    "prepublish": "npm run build",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch"
  },
  "typings": "dist/types/index.d.ts"
}
