{
  "name": "@gridy/players",
  "description": "Board games library",
  "version": "0.1.2",
  "author": "Jan Forst <ensonador@gmail.com>",
  "dependencies": {
    "@gridy/core": "^0.4.6",
    "@gridy/games": "^0.1.2"
  },
  "devDependencies": {
    "@gridy/build-lib": "^1.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^4.1.0",
    "del-cli": "^2.0.0",
    "jest": "^24.8.0",
    "rollup": "^1.12.3",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.14.2",
    "typedoc-plugin-internal-external": "^2.0.2",
    "typescript": "^3.4.5",
    "uglify-js": "^3.5.15"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT",
  "main": "dist/gridy-players.umd.js",
  "meta": {
    "namespace": "GridyPlayers",
    "external": [
      "@gridy/core",
      "@gridy/games"
    ]
  },
  "module": "dist/gridy-players.es5.js",
  "scripts": {
    "build": "tsc --module commonjs && rollup -c node_modules/@gridy/build-lib/rollup.config.js && typedoc --out docs --target es6 --theme minimal --mode file src",
    "prebuild": "del-cli docs dist",
    "prepublish": "npm run build",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch"
  },
  "typings": "dist/types/index.d.ts"
}
