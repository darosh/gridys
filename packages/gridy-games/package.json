{
  "name": "@gridy/games",
	"description": "Board games logic based on @gridy/core",
  "version": "0.2.0",
  "author": "Jan Forst <ensonador@gmail.com>",
  "dependencies": {
    "@gridy/core": "^0.5.0"
  },
  "devDependencies": {
    "@gridy/build": "^1.1.0",
    "@gridy/eslint-config": "^1.1.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "typescript": "3.4.5"
  },
  "license": "MIT",
  "main": "dist/gridy-games.umd.js",
  "meta": {
    "namespace": "GridyGames",
    "external": [
      "@gridy/core"
    ]
  },
  "module": "dist/gridy-games.es.js",
  "repository": "https://github.com/darosh/gridys/tree/master/packages/gridy-games",
  "scripts": {
    "build": "tsc --module commonjs && rollup -c node_modules/@gridy/build/rollup.config.js",
    "doc": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "lint": "eslint --fix src/**/*.ts -f unix",
    "prebuild": "del-cli dist",
    "predoc": "del-cli docs",
    "prepublish": "npm run build",
    "start": "rollup -c node_modules/@gridy/build/rollup.config.js -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage"
  },
  "typings": "dist/types/index.d.ts"
}
