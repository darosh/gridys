{
  "name": "@gridy/games",
  "description": "Board games library",
  "version": "0.1.2",
  "author": "Jan Forst <ensonador@gmail.com>",
  "dependencies": {
    "@gridy/core": "^0.4.6"
  },
  "devDependencies": {
    "@gridy/build-lib": "^1.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "concurrently": "^4.1.0",
    "del-cli": "^1.1.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT",
  "main": "dist/gridy-games.umd.js",
  "meta": {
    "namespace": "GridyGames",
    "external": [
      "@gridy/core"
    ]
  },
  "module": "dist/gridy-games.es.js",
  "scripts": {
    "build": "node node_modules/@gridy/build-lib/node_modules/typescript/bin/tsc --module commonjs && node node_modules/@gridy/build-lib/node_modules/rollup/bin/rollup -c node_modules/@gridy/build-lib/rollup.config.js && node node_modules/@gridy/build-lib/node_modules/typedoc/bin/typedoc --out docs --target es6 --theme minimal --mode file src",
    "prebuild": "del-cli docs dist",
    "prepublish": "npm run build",
    "test": "jest --coverage"
  },
  "typings": "dist/types/index.d.ts"
}
