{
  "name": "@gridy/core",
  "description": "TypeScript grid library for server and browser",
  "version": "0.4.6",
  "author": "Jan Forst <ensonador@gmail.com>",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^4.1.0",
    "d3": "5.9.2",
    "del-cli": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "jsdom": "15.1.0",
    "rollup": "^1.12.3",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-internal-external": "^2.0.2",
    "typescript": "^3.4.5",
    "uglify-js": "^3.5.15"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT",
  "main": "dist/es6/index.js",
  "module ": "dist/es6/index.js",
  "repository": ".",
  "scripts": {
    "build": "npm run build:ts && npm run build:js && npm run build:diagram",
    "build:diagram": "rollup -m -c rollup.config.js dist/es6/Diagram.js -o dist/diagram.js -f umd -n Diagram",
    "build:js": "rollup -m -c rollup.config.js dist/es6/index.js -o dist/gridy.js -f umd -n Gridy ",
    "build:ts": "tsc -d --declarationDir dist/types -p tsconfig.json --outDir dist/es6",
    "clean": "del-cli doc dist examples/output",
    "doc": "typedoc --hideGenerator --mode file --out doc src/ --name Gridy --readme .template.md",
    "examples": "node examples/node.js",
    "lint:es": "eslint --fix examples/*.js",
    "lint:ts": "tslint -p tsconfig.json --fix -t stylish",
    "start": "concurrently \"npm run watch:ts\" \"npm run watch:gridy\" \"npm run watch:diagram\"",
    "test": "jest --coverage",
    "watch:diagram": "rollup dist/es6/Diagram.js -c rollup.config.js -m -w --o dist/diagram.js --f umd --name Diagram",
    "watch:gridy": "rollup dist/es6/index.js -c rollup.config.js -m -w --o dist/gridy.js --f umd --name Gridy",
    "watch:ts": "tsc --watch -d --declarationDir dist/types -p tsconfig.json --outDir dist/es6"
  },
  "types": "dist/types/index.d.ts",
  "typpings": "dist/types/index.d.ts"
}
